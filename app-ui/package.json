{
  "name": "electron-app-ui",
  "version": "0.1.0",
  "private": true,
  "main": "app.js",
  "scripts": {
    "buildui": "webpack --mode production",
    "buildelectron": "electron-builder build -c builder-config.json",
    "buildapi": "dotnet publish ../app-api/ElectronAppApiHost --self-contained --output ./dist/api",
    "buildmacdev": "npm run buildui && npm run buildapi -- --runtime osx-x64 && npm run buildelectron -- -c.mac.identity=null",
    "buildwin": "npm run buildui && npm run buildapi -- --runtime win-x64 && npm run buildelectron",
    "buildlinux": "npm run buildui && npm run buildapi -- --runtime linux-x64 && npm run buildelectron"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.6.1",
    "@microsoft/signalr": "^9.0.6",
    "tsyringe": "^4.10.0",
    "reflect-metadata": "^0.2.2",
    "@reduxjs/toolkit": "^1.9.3",
    "react-redux": "^8.1.3",
    "redux-persist": "^6.0.0",
    "lucide-react": "^0.511.0",
    "@mui/material": "^7.3.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/roboto": "^5.2.5",
    "@mui/icons-material": "^7.3.2",
    "@mui/x-data-grid": "^8.11.2",
    "@mui/x-data-grid-generator": "^8.11.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "typescript": "^5.8.3",

    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1",
    "ts-loader": "^9.5.2",
    "style-loader": "^4.0.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",

    "electron": "^37.4.0",
    "electron-builder": "^26.0.12"
  }
}
